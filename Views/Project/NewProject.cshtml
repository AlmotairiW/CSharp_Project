<div class="text-center">
    
    @model Project;
    <form asp-action="CreateProject" asp-controller="Project" method="post">
        <div class="form-group">
            <input asp-for="ProjectName" class="form-control" placeholder="ProjectName">
        </div>
        <div class="form-group">
            <input asp-for="Description" class="form-control" placeholder="Description">
        </div>
        <div class="form-group">
            <input asp-for="StackName" class="form-control" placeholder="StackName">
        </div>
        <div class="form-group">
            <input asp-for="ProjectGithub" class="form-control" placeholder="ProjectGithub">
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Add Project">
        </div>
    </form>
</div>